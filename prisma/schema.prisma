datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- MODELO DE USUÁRIO (O CORAÇÃO DO SISTEMA) ---
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   // Foto em Base64 ou URL

  // --- DADOS DO MENU "OPTIONS" (PERFIL CUSTOM) ---
  course        String?   // Ex: "Computer Science"
  bio           String?   // Biografia curta

  // --- DADOS DO MODAL DE "ONBOARDING" ---
  role          String?   // "student", "researcher", etc.
  phone         String?   // "(00) 00000-0000"
  identityId    String?   // CPF, Matrícula, etc.
  idType        String?   // "wallet" ou "role_id"
  walletAddress String?   // Carteira Crypto

  // --- DADOS DE COMPROVAÇÃO E ADMIN ---
  kycStatus     String    @default("pending")
  documents     Json?     // Metadados dos PDFs
  institution   String?   // Instituição de ensino

  // Datas de controle
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // --- RELACIONAMENTOS ---
  accounts      Account[]
  sessions      Session[]
  
  // Relacionamento com o Feed
  posts         Post[]
  comments      Comment[]

  // Relacionamento com a Área de Trabalho (Lounge)
  userSpaceData UserSpaceData?
}

// --- NOVO MODELO: MEMÓRIA DO LOUNGE & SALAS ---
model UserSpaceData {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // Conexão com o Usuário
  userId      String   @unique @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Dados Persistentes
  schedule    Json?    // Array das aulas (JSON puro)
  chatHistory Json?    // Histórico do Chat (Array de objetos)
  stickyNote  String?  // Texto do post-it
  activeProject Json?  // Projeto ativo
  citations     Json?  // Citações geradas pelos agentes
  workContent String?
  workTitle String?

  updatedAt   DateTime @updatedAt
}

// --- MODELOS DE FEED ---
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  likes     String[] @default([])
  createdAt DateTime @default(now())

  // Autor do Post
  user      String   // Nome de exibição (Snapshot)
  userId    String?  @db.ObjectId
  author    User?    @relation(fields: [userId], references: [id])

  comments  Comment[]
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  user      String   // Nome de exibição
  createdAt DateTime @default(now())

  // Relação com Post
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Relação com Usuário
  userId    String?  @db.ObjectId
  author    User?    @relation(fields: [userId], references: [id])
}

// --- MODELOS PADRÃO DO NEXTAUTH ---
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}